# ==============================================
# ABSENSI API - ENVIRONMENT CONFIGURATION
# ==============================================
# ⚠️ COPY this file to .env and fill in YOUR OWN values
# ⚠️ NEVER commit the .env file to Git!

# Application
APP_NAME=Absensi API
ENV=dev

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Option 1: SQLite (Default - no setup required)
# DATABASE_URL=sqlite:///./absensi.db

# Option 2: MySQL with Laragon (Recommended for Production)
# Create database 'absensi' first in HeidiSQL/phpMyAdmin
DATABASE_URL=mysql+pymysql://root:YOUR_PASSWORD@localhost:3306/absensi

# ==============================================
# SECURITY (⚠️ REQUIRED - GENERATE YOUR OWN!)
# ==============================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=GENERATE_YOUR_OWN_KEY_HERE

# Admin JWT token expiry (hours)
ADMIN_TOKEN_EXPIRE_HOURS=24

# ==============================================
# DEVICE AUTHENTICATION
# ==============================================
# Format: device_id:token,device_id2:token2|(exam: computer1:123)
# ⚠️ Change this for production!
DEVICE_TOKENS=DEVICE_ID:CHANGE_THIS_TOKEN

# ==============================================
# FACE RECOGNITION (MTCNN + FaceNet)
# ==============================================
MAX_DISTANCE=0.85
MIN_FACE_PX=80

# ==============================================
# ATTENDANCE
# ==============================================
COOLDOWN_SECONDS=45

# ==============================================
# SNAPSHOTS
# ==============================================
SAVE_SNAPSHOTS=true
SNAPSHOT_DIR=./data/snapshots
SNAPSHOT_ON_UNKNOWN=true
SNAPSHOT_ON_LOW_CONF=true
LOW_CONF_DISTANCE=0.85