# Application
APP_NAME=Absensi API
ENV=dev

# Database (SQLite default - tidak perlu install database server)
DATABASE_URL=sqlite:///./absensi.db

# Untuk MySQL (uncomment jika pakai MySQL):
# DATABASE_URL=mysql+pymysql://root:password@localhost:3306/absensi_db

# Security (WAJIB DIISI - Generate dengan: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here-change-this

# Admin token expiry (jam)
ADMIN_TOKEN_EXPIRE_HOURS=24

# Device authentication (format: device_id:token,device_id2:token2)
DEVICE_TOKENS=stb-01:87654321

# Face Recognition
MAX_DISTANCE=0.95
MIN_FACE_PX=90

# Attendance
COOLDOWN_SECONDS=45

# Snapshots
SAVE_SNAPSHOTS=true
SNAPSHOT_DIR=./data/snapshots
SNAPSHOT_ON_UNKNOWN=true
SNAPSHOT_ON_LOW_CONF=true
LOW_CONF_DISTANCE=0.85